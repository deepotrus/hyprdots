{
  "layer": "top",
  "margin-top": 5, /* Distance from top of the monitor */
  /*"margin-bottom": 0, Not important because layer is top*/
  "margin-left": 10,
  "margin-right": 10,
  
  "position": "top",
  "spacing": 0, /* Distance between bubbles */
  
  "modules-left": [
    "cpu",
    "memory",
    "disk"
  ],
  
  "modules-center": [
    "hyprland/workspaces"
  ],
    
  "modules-right": [
    "custom/weather", "custom/bluetooth", "temperature", "pulseaudio", "clock"
  ],


//~~~~~~~~~~~~~~~ LEFT MODULES ~~~~~~~~~~~~~~~~//

  "cpu": {
    "interval": 10,
    "format": "Û∞ª† {usage}%",
    "max-length": 10
  },

  "disk": {
    "interval": 30,
    "format": " Û∞ãä {percentage_used}%",
    "path": "/",
    "tooltip": true,
    "tooltip-format": "HDD - {used}/{total}"
  },

  "memory": {
    "interval": 30,
    "format": "Û∞çõ {}%",
    "max-length": 10,
    "tooltip": true,
    "tooltip-format": "Memory - {used:0.1f}GB used"
  },

//~~~~~~~~~~~~~~~~ CENTER MODULES ---------------//
  "hyprland/workspaces": {
    "all-outputs": true,
    "activate-only": false,
    "on-click": "activate",
    "format": "{icon}",
    "format-icons":{
      "urget":"",
      "active":"ÔÜí",
      "default":"ÔëÑ"
    },
    "persistent-workspaces": {
      "*":5
    }
  },

//~~~~~~~~~~~~~~~~ RIGHT MODULES ----------------//
  "custom/weather": {
    "exec": "~/.config/waybar/weather/weather.sh",
    "on-click": "~/.config/waybar/weather/start.sh",
    "return-type": "json",
    "interval": 0.1 //update every 0.1 seconds
  },

  "custom/bluetooth":{
    "exec": "~/.config/waybar/bluetooth/bluetooth.sh",
    "on-click": "~/.config/waybar/bluetooth/toggle-bluetooth.sh",
    "return-type": "json",
    "interval": 0.1 //update every 0.1 seconds
  },
  
  "temperature": {
    "thermal-zone": 1,
    "format": "Ôãà {temperatureC}¬∞C",
    "critical-threshold": 70,
    "format-critical": "Ôãá {temperatureC}¬∞C"
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "Ôë¶",
    "on-click": "pamixer -t",
    "on-scroll-up": "pamixer -i 5",
    "on-scroll-down": "pamixer -d 5",
    "scroll-step": 5,
    "format-icons": {
      "headphone": "üéß",
      "default": ["Û∞ïø","Û∞ñÄ","Û∞ïæ"]
    },
  },
  
  "clock":{
    "tooltip": true,
    "tooltip-format": "{:Ó™∞  %A, %B %e %Y}"
  }
}
